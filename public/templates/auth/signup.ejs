<div class="signup">
	<form class="form-horizontal">
		<% /* username */ %>
		<forms-input
		label="Nombre"
		name="username"
		id="signup-username"
		required="true"
		></forms-input>

		<% /* password */ %>
		<forms-input
		label="Password"
		type="password"
		name="password"
		id="signup-password"
		required="true"
		></forms-input>

		<% /* username */ %>
		<forms-input
		label="E-mail"
		name="email"
		id="signup-email"
		required="true"
		></forms-input>

		<forms-button label="Solicitar registro" classes="btn btn-primary" icon="fa fa-pencil-square-o" action="signUp"></forms-button>
	</form>
</div>	